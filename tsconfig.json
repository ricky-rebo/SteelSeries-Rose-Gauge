{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/",
    "lib": ["es2017", "dom"],
    "noImplicitAny": true,
    "removeComments": false,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["./src"],
  "exclude": ["./src/__tests__"]
}
